<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <TextView
        android:id="@+id/ranking_tv_ranking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#150B0B"
        android:text="1"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ranking_tv_header"
        app:layout_constraintLeft_toRightOf="@id/ranking_tv_ranking"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <TextView
        android:id="@+id/ranking_tv_name"
        app:layout_constraintLeft_toRightOf="@id/ranking_tv_header"
        android:text="同袍"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ranking_tv_level"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ranking_tv_name"
        android:src="@mipmap/lv1"
        android:layout_width="40dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/ranking_tv_sex"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/sex_woman"
        android:text="11"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/ranking_tv_location"
        app:layout_constraintLeft_toRightOf="@id/ranking_tv_header"
        app:layout_constraintTop_toBottomOf="@id/ranking_tv_name" />

    <TextView
        android:id="@+id/ranking_tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="北京"
        app:layout_constraintBottom_toBottomOf="@+id/ranking_tv_header"
        app:layout_constraintLeft_toRightOf="@id/ranking_tv_header" />
    <TextView
        android:id="@+id/ranking_tv_money"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="铜钱"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>